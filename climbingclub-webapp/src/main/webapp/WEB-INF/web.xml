<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- =============================================================== -->
    <!-- Listener et configuration Spring -->
    <!-- =============================================================== -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath*:/com/antazri/climbingclub/webapp/spring/applicationContext-bootstrap.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- =============================================================== -->
    <!-- Ressources JNDI -->
    <!-- =============================================================== -->
    <resource-ref>
        <res-ref-name>jdbc/DB_CCLUB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- =============================================================== -->
    <!-- Filter et configuration Struts 2 -->
    <!-- =============================================================== -->
    <filter>
        <filter-name>struts</filter-name>
        <filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- =============================================================== -->
    <!-- Mapping et configuration des Servlets -->
    <!-- =============================================================== -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.antazri.climbingclub.webapp.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>