<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="cclub-default" extends="struts-default">
        <!-- Action INDEX par dÃ©faut -->
        <default-action-ref name="index" />
        <action name="index">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>


    </package>

    <package name="doToposList" extends="cclub-default" namespace="/topos">
        <!-- Action TOPOS LIST -->
        <action name="doToposList"
                class="com.antazri.climbingclub.webapp.action.GestionTopoAction"
                method="doList">
            <result>/WEB-INF/jsp/topos/topos.jsp</result>
        </action>
    </package>

    <package name="topos" extends="cclub-default" namespace="/topos/topo">
        <!-- Action TOPO DETAILS -->
        <action name="doTopoDetails"
                class="com.antazri.climbingclub.webapp.action.GestionTopoAction"
                method="doDetails">
            <result>/WEB-INF/jsp/topos/topo.jsp</result>
        </action>
    </package>
</struts>